<?xml version="1.0" encoding="utf-8"?>

<uk.co.armedpineapple.corsixth.wizard.ExtractDataWizard xmlns:android="http://schemas.android.com/apk/res/android"
                                                          android:layout_width="match_parent"
                                                          android:layout_height="match_parent" >

    <TextView
            android:id="@+id/originalfilesHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/extract_files_header"
            android:textAppearance="@style/WizardHeaderText" />

    <TextView
            android:id="@+id/originalfilesText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/originalfilesHeader"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/extract_files_text"
            android:textAppearance="@style/WizardText" />

    <RadioGroup
            android:id="@+id/originalFilesRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/originalfilesText"
            android:layout_marginLeft="30dp" >

        <RadioButton
                android:id="@+id/automaticRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_files" />

        <RadioButton
                android:id="@+id/cacheRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="@string/external_cache_dir" />

        <RadioButton
                android:id="@+id/manualRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/custom_files" />
    </RadioGroup>

</uk.co.armedpineapple.corsixth.wizard.ExtractDataWizard>
